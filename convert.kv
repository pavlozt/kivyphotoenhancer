DropLayout:
    orientation: 'vertical'
    padding: 25
    spacing: 25
    Label:
        id: statuslabel
        size_hint: 1,0.1
        text: "Загрузка"
    Label:
        size_hint: 1,1
        id: fileslist
        text: ""        
    DropFileArea:
        size_hint: 1,0.75
        id: droparea
        disabled: True
        text: "Переместите файлы на поле"
    ProgressBar:
        size_hint: 1,0.05
        id: progress
        value: 0
    Button:
        id: uploadbutton
        size_hint: 1,0.2
        pos_hint : {'bottom': 0.05, 'center_x' : 0.5}
        text: 'Загрузка'
        on_press: app.do_upload()